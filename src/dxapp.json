{
  "name": "nextflow-app",
  "title": "Nextflow",
  "summary": "Nextflow on DNAnexus",
  "dxapi": "1.0.0",
  "version": "1.0.0-beta.2",
  "details": {
    "contactEmail": "info@seqera.io",
    "citation": "doi:10.1038/nbt.3820"
  },
  "openSource": false,
  "inputSpec": [
      { "name": "pipeline_url", "class": "string", "default": "https://github.com/nextflow-io/hello" },
      { "name": "work_dir", "class": "string", "optional": true },
      { "name": "resume_id", "class": "string", "optional": true },
      { "name": "log_file", "class": "string", "optional": true },
      { "name": "opts", "class": "string", "optional": true },
      { "name": "args", "class": "string", "optional": true },
      { "name": "debug", "class": "string", "optional": true },
      { "name": "license", "class": "string", "optional": false }
  ],
  "outputSpec": [ ],
  "runSpec": {
    "file": "dxapp.sh",
    "interpreter": "bash",
    "execDepends": [ {"name": "openjdk-8-jre-headless", "stages": ["main"]} ],
    "distribution": "Ubuntu",
    "release": "16.04"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    },
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    },
    "aws:cn-north-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    },
    "aws:ap-southeast-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    },
    "azure:westeurope": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x2"
        }
      }
    },
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem2_ssd1_x2"
        }
      }
    }
  }
}
